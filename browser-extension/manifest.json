{
  "manifest_version": 3,
  "name": "GenAI Pseudonymizer (AenganZ Enhanced)",
  "version": "1.0.0",
  "description": "프롬프트는 가명화하여 전송하고 응답은 원복하여 표시합니다 - AenganZ 서버 호환",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://chat.openai.com/*",
    "https://chat.openai.com/backend-api/*",
    "https://chatgpt.com/*",
    "https://chatgpt.com/backend-api/*",
    "https://claude.ai/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "background": { 
    "service_worker": "background.js", 
    "type": "module" 
  },
  "content_scripts": [{
    "matches": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*", 
      "https://claude.ai/*"
    ],
    "js": ["content.js"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": [{
    "resources": ["injected.js"],
    "matches": ["<all_urls>"]
  }],
  "action": { 
    "default_popup": "popup.html",
    "default_title": "가명화 로그 확인"
  },
  "options_ui": { 
    "page": "options.html", 
    "open_in_tab": true 
  }
}